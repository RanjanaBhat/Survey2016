<h1>Listing surveys</h1>

<table class="table">
  <thead>
    <tr>
      <th id= "survey_name">Survey Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%=link_to  survey.name.capitalize ,   new_survey_attemptsurvey_path(survey), class: "btn btn-link" , id: "survey_name" %></td>

        

        <td><%= link_to new_survey_attemptsurvey_path(survey), class: 'btn btn-primary' do %>
        <i class="  glyphicon glyphicons-disk-open"></i> Start Survey
        <% end %></td>


        <td><%= link_to survey_path(survey), class: 'btn btn-info' do %>
        <span class="  glyphicon glyphicons-info"></span> Report
        <% end %></td>

        <td><%= link_to edit_survey_path(survey), class: 'btn btn-primary' do %>
        <span class="  glyphicon glyphicons-edit"></span> Edit
        <% end %></td>
        <td><%= link_to survey_path(survey), :title => 'Delete', :rel => 'tooltip', method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger" do %>Destroy
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
        <td><%#= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?', class: "btn btn-danger" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>

  <% if current_user.id == User.first.id %>

<%= link_to 'New Survey', new_survey_path , class: "btn btn-success" %>
<% end %>
<% end %>
</body>
</html>